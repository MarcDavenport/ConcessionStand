<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.marc.concessionstand.MainActivity"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_layout">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/app_bar_main" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@android:drawable/title_bar"
            android:backgroundTint="@color/colorPrimaryDark"
            android:id="@+id/top_border_layout"
            android:layout_height="10dp"></LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/hd_layout">

            <Button
                android:text="+"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/hd_plus_btn"
                android:layout_width="50dp" />

            <TextView
                android:text="Hot Dog"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/hd_text"
                android:textAlignment="center" />

            <Button
                android:text="-"
                android:layout_height="wrap_content"
                android:id="@+id/hd_minus_btn"
                android:layout_width="50dp" />

            <TextView
                android:text="0 @ $-0.00 = $0.00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/hd_price_expr"
                android:textAlignment="center" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/candy_layout">

            <Button
                android:text="+"
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/candy_plus_btn" />

            <TextView
                android:text="Candy"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/candy_text"
                android:layout_width="100dp" />

            <Button
                android:text="-"
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:id="@+id/candy_minus_btn" />

            <TextView
                android:text="0 @ $0.00 = $0.00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/candy_price_expr"
                android:textAlignment="center" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/soda_layout">

            <Button
                android:text="+"
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/soda_plus_btn" />

            <TextView
                android:text="Soda"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/soda_text"
                android:layout_width="100dp" />

            <Button
                android:text="-"
                android:layout_width="53dp"
                android:layout_height="wrap_content"
                android:id="@+id/soda_minus_btn" />

            <TextView
                android:text="0 @ $0.00 = $0.00"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/soda_price_expr" />
                android:id="@+id/soda_price_expr"

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:layout_weight="1"
            android:id="@+id/bottom_group_layout">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:background="@android:drawable/title_bar"
                android:backgroundTint="@color/colorPrimaryDark"
                android:id="@+id/top_div_layout"
                android:layout_height="10dp"></LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/total_expr_layout"
                android:gravity="right|center_vertical">

                <TextView
                    android:text="TOTAL = $0.00"
                    android:layout_height="match_parent"
                    android:id="@+id/total_expr"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:layout_width="200dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:backgroundTint="@color/colorPrimaryDark"
                android:id="@+id/bottom_div_layout"
                android:background="@android:drawable/title_bar"
                android:layout_height="10dp"></LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/status_layout"
                android:layout_gravity="center_vertical">

                <TextView
                    android:text="Please enter your username and passsword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/status_message_text"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/account_layout">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/login_btns_layout"
                    android:layout_gravity="center_vertical">

                    <Button
                        android:text="LOGIN"
                        android:layout_height="wrap_content"
                        android:id="@+id/login_btn"
                        android:layout_weight="1"
                        android:layout_width="match_parent" />

                    <Button
                        android:text="LOGOUT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/logout_btn"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:id="@+id/login_text_area_layout"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:text="Name"
                        android:ems="10"
                        android:id="@+id/username_edit_text"
                        android:layout_margin="10dp"
                        android:background="@color/colorAccent"
                        android:textAlignment="textEnd" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:id="@+id/password_edit_text"
                        android:layout_margin="10dp"
                        android:background="@color/colorAccent"
                        android:text="password"
                        android:textAlignment="textEnd" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_weight="1"
                android:id="@+id/action_button_layout">

                <Button
                    android:text="CLEAR ORDER"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/clear_btn"
                    android:layout_weight="1" />

                <Button
                    android:text="SUBMIT ORDER"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/submit_btn"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
